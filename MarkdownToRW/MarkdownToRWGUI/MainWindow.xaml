<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Markdown To Wordpress CORE GUI" Padding="5 5 5 5">


  <Grid HorizontalAlignment="Stretch">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

  <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="5 5 5 5">
    <StackPanel Orientation="Horizontal" Grid.Column="0">
      <Button Content="Open Markdown File..." Command="{Binding StartConvertCommand}"  Margin="0 5 0 0" Width="200"></Button>
    </StackPanel>
    <TextBlock Text="{Binding Greeting}" Margin="0 5 0 0"></TextBlock>
    <TextBox Text="{Binding Name}" Margin="0 5 0 0"></TextBox>
    <Button Content="Convert" Command="{Binding StartConvertCommand}"  Margin="0 5 0 0"></Button>
    <Button Content="Test" Command="{Binding TestCommand}"  Margin="0 5 0 0"></Button>
    <TextBlock Text="{Binding Result}"></TextBlock>
    <CheckBox IsChecked="{Binding IsClassy}" Margin="0 5 0 0">Classy</CheckBox>
  </StackPanel>


    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Stretch" Margin="5 5 5 5">
      <StackPanel Orientation="Horizontal" Grid.Column="0">
        <Button Content="Preview HTML..." Command="{Binding StartConvertCommand}"  Margin="0 5 0 0" Width="200"></Button>
      </StackPanel>
      <TextBlock Text="{Binding Greeting}" Margin="0 5 0 0"></TextBlock>
      <TextBox Text="{Binding Name}" Margin="0 5 0 0"></TextBox>
      <Button Content="Convert" Command="{Binding StartConvertCommand}"  Margin="0 5 0 0"></Button>
      <Button Content="Test" Command="{Binding TestCommand}"  Margin="0 5 0 0"></Button>
      <TextBlock Text="{Binding Result}"></TextBlock>
      <CheckBox IsChecked="{Binding IsClassy}" Margin="0 5 0 0">Classy</CheckBox>
    </StackPanel>


  </Grid>

</Window>