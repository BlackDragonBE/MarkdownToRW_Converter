<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Markdown To Wordpress CORE GUI" Padding="5 5 5 5" Width="800" Height="400" MinWidth="800" MinHeight="400">


  <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition Height="auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="40" />
    </Grid.RowDefinitions>

  <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5 5 5 5">
    <StackPanel Orientation="Horizontal" Grid.Column="0" VerticalAlignment="Stretch">
      <Button Content="Open Markdown File..." Command="{Binding StartConvertCommand}"  Margin="0 5 0 0" Width="200"></Button>
    </StackPanel>
    <CheckBox IsChecked="{Binding IsClassy}" Margin="0 5 0 0">Upload Images</CheckBox>
  </StackPanel>


    <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5 5 5 5">
      <StackPanel Orientation="Horizontal" Grid.Column="0">
        <Button Content="Preview HTML..." Command="{Binding StartConvertCommand}"  Margin="0 5 0 0" Width="200"></Button>
      </StackPanel>
    </StackPanel>

    <TextBox Text="{Binding MarkdownText}" Margin="0 5 5 0" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>
    <TextBox Text="{Binding HtmlText}" Margin="5 5 0 0" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>

    <Button Content="Upload images..." Command="{Binding StartConvertCommand}"  Margin="0 5 0 0" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"></Button>

  </Grid>

</Window>